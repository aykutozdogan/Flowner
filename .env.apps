
# Backend API - Use Replit's webview URL
VITE_API_BASE_URL=https://${REPLIT_SLUG}-${REPLIT_OWNER}.replit.dev

# Admin App - Replit external port mapping  
VITE_ADMIN_APP_URL=https://${REPLIT_SLUG}-${REPLIT_OWNER}.replit.dev:3001
VITE_PORTAL_APP_URL=https://${REPLIT_SLUG}-${REPLIT_OWNER}.replit.dev:3002

# CORS Origins - Allow all Replit and local domains
CORS_ALLOWLIST=*.replit.dev,*.repl.co,localhost:5174,localhost:5175,localhost:5000

# App-specific settings
VITE_APP_NAME_ADMIN=Flowner Admin
VITE_APP_NAME_PORTAL=Flowner Portal
